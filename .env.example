# ===========================================
# Audible Library Manager - Environment Config
# ===========================================

# Application
NODE_ENV=development
DEBUG=false

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://audible:password@localhost:5432/audible_db
POSTGRES_USER=audible
POSTGRES_PASSWORD=password
POSTGRES_DB=audible_db

# Backend API
API_HOST=0.0.0.0
API_PORT=8000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Paths (Docker volumes)
DATA_DIR=/data
DOWNLOADS_DIR=/data/downloads
CONVERTED_DIR=/data/converted
COMPLETED_DIR=/data/completed
CORE_SCRIPTS_DIR=/core
MANIFEST_DIR=/specs

# Optional: bind-mount host media directories into the API container
# (recommended for the repair pipeline to see your real library files)
# DOWNLOADS_HOST_DIR=/Volumes/Media/Audiobooks/Downloads
# CONVERTED_HOST_DIR=/Volumes/Media/Audiobooks/Converted
# COMPLETED_HOST_DIR=/Volumes/Media/Audiobooks/Completed

# Job Concurrency
MAX_DOWNLOAD_CONCURRENT=5
MAX_CONVERT_CONCURRENT=2

# WebSocket
WS_LOG_BUFFER_MS=100
WS_PING_INTERVAL=30

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Audible Auth (optional - can be mounted from ~/.audible)
# AUDIBLE_AUTH_FILE=/data/auth.json
# AUDIBLE_PROFILE=default
